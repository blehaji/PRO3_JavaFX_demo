<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cz.uhk.pro3.javafx_cookieclicker.MainController"
      stylesheets="@main-style.css"
      styleClass="background">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="scoreLabel"/>
    <Button text="I'm a cookie!" fx:id="cookieButton" onAction="#onCookieButtonClick"/>
    <Label fx:id="clickPointsLabel"/>
    <Button fx:id="upgradeClicksButton" onAction="#onUpgradeClicksButtonClick"/>
    <Label fx:id="tickPointsLabel"/>
    <Button fx:id="upgradeTicksButton" onAction="#onUpgradeTicksButtonClick"/>
</VBox>
